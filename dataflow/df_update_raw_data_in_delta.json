{
	"name": "df_update_raw_data_in_delta",
	"properties": {
		"folder": {
			"name": "Delta"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "lnk_adls_axiomstandardatalake",
						"type": "LinkedServiceReference"
					},
					"name": "SRCParquetRawTransactionsInDelta"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "lnk_adls_axiomstandardatalake",
						"type": "LinkedServiceReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "AddLoadDateColumn"
				}
			],
			"scriptLines": [
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delta',",
				"     fileSystem: 'textdatafiles',",
				"     folderPath: 'transactions/staging/transaction_data') ~> SRCParquetRawTransactionsInDelta",
				"SRCParquetRawTransactionsInDelta derive(load_date = currentDate()) ~> AddLoadDateColumn",
				"AddLoadDateColumn sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delta',",
				"     fileSystem: 'textdatafiles',",
				"     folderPath: 'transactions/staging/transaction_data',",
				"     mergeSchema: false,",
				"     autoCompact: false,",
				"     optimizedWrite: false,",
				"     vacuum: 0,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}